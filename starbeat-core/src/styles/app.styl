html, body, #root, .starbeat-app
    width: 100%
    height: 100%
    margin: 0
    user-select: none
    font-family: "Arial", "Microsoft YaHei", "Pingfang SC"

*
    box-sizing: border-box

.starbeat-app
    display: flex

.page
    width: calc(100% - 120px)
    height: 100%
    position: fixed
    left: 120px
    overflow-y: auto